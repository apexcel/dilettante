{
    "compilerOptions": {
        "target": "ES6",
        "module": "esnext",
        "moduleResolution": "node",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "keyofStringsOnly": true,
        "baseUrl": "./src"
    },
    "include": [
        "./src/**/*.tsx",
        "@type", 
        "src/components/App.tsx", 
        "../tulib/src/calendar/Calendar.ts", 
        "src/reducer/useInput.ts",
        "src/utils/",
        "types"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "webpack",
        "jest",
    ]
}